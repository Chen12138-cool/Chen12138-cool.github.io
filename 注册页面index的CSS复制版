    font-size: 1em;
    top: 50%;
    left: 45px;
    transform: translateY(-50%);/* 垂直居中 */
    color: #fff;
    pointer-events: none;/* 使得label不响应鼠标点击 */
    transition: .5s;

}

.input-box input:focus ~ label,
.input-box input:valid ~ label{
    font-size: .8em;
